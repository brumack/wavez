<% include ../partials/header %>

<div class="container new">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h1> Edit <%=beach.name%> </h1>
            <form action="/beaches/<%=beach._id%>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="beach[name]" value="<%=beach.name%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="beach[image]" value="<%=beach.image%>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" rows="5" id="desc" name="beach[desc]"><%=beach.desc%></textarea>
                </div>
                <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                </div>
            </form>
            <a href="/beaches">Back</a>
        </div>
    </div>
</div>
<% include ../partials/footer %>